{
  "name": "sowar",
  "version": "0.1.0",
  "description": "in-browser OCaml exercises",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build:dist": "mkdir -p dist && cp -r public/* dist/",
    "build:ts": "bun build src/main.ts --outdir dist --target browser --minify --loader .md:text --loader .ml:text",
    "build:css": "bunx @tailwindcss/cli -i ./src/input.css -o ./public/style.css --minify",
    "build": "bun run clean && bun run build:ts && bun run build:css && bun run build:dist",
    "start": "bun run build && bun run serve",
    "dev": "bun run dev.ts",
    "serve": "bun server.ts"
  },
  "dependencies": {
    "@catppuccin/codemirror": "^1.0.1",
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.1",
    "@codemirror/language": "^6.12.1",
    "@codemirror/legacy-modes": "^6.5.2",
    "@codemirror/lint": "^6.9.3",
    "@codemirror/search": "^6.6.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.11",
    "@tailwindcss/cli": "^4.1.18",
    "canvas-confetti": "^1.9.4",
    "codemirror": "^6.0.2",
    "marked": "^17.0.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/canvas-confetti": "^1.9.0",
    "bun-types": "^1.3.7",
    "tailwindcss": "^4.1.18"
  }
}
